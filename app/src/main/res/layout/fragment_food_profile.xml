<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.example.tender.FoodProfileFragment">

    <ImageView
        android:id="@+id/dishimage"
        android:layout_width="346dp"
        android:layout_height="420dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/text_mask"
        android:layout_width="346dp"
        android:layout_height="420dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/text_mask" />

    <TextView
        android:id="@+id/blurb"
        android:layout_width="346dp"
        android:layout_height="120dp"
        android:fontFamily="@font/trebuchet"
        android:gravity="bottom"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/dishimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dishname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/ropa_sans"
        android:textColor="#404040"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dishimage" />

    <TextView
        android:id="@+id/restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/trebuchet_bold"
        android:textColor="#4C58A8"
        app:layout_constraintStart_toStartOf="@+id/dishname"
        app:layout_constraintTop_toBottomOf="@+id/dishname" />

    <TextView
        android:id="@+id/price_and_distance"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/trebuchet"
        android:textColor="#404040"
        app:layout_constraintStart_toStartOf="@+id/restaurant"
        app:layout_constraintTop_toBottomOf="@+id/restaurant" />

    <TextView
        android:id="@+id/hours_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/trebuchet"
        android:text="Hours:"
        android:textColor="#404040"
        app:layout_constraintStart_toStartOf="@+id/restaurant"
        app:layout_constraintTop_toBottomOf="@+id/price_and_distance" />

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/trebuchet"
        android:textColor="#404040"
        app:layout_constraintStart_toEndOf="@+id/hours_label"
        app:layout_constraintTop_toTopOf="@+id/hours_label" />

    <TextView
        android:id="@+id/dine_in_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/trebuchet"
        android:text="Dine-In:"
        android:textColor="#404040"
        app:layout_constraintStart_toStartOf="@+id/restaurant"
        app:layout_constraintTop_toBottomOf="@+id/hours_label" />

    <TextView
        android:id="@+id/dine_in_option"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/trebuchet"
        android:textColor="#404040"
        app:layout_constraintStart_toEndOf="@+id/dine_in_label"
        app:layout_constraintTop_toTopOf="@+id/dine_in_label" />

    <TextView
        android:id="@+id/take_out_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:fontFamily="@font/trebuchet"
        android:text="Take-Out:"
        android:textColor="#404040"
        app:layout_constraintStart_toEndOf="@+id/dine_in_option"
        app:layout_constraintTop_toTopOf="@+id/dine_in_label" />

    <TextView
        android:id="@+id/take_out_option"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/trebuchet"
        android:textColor="#404040"
        app:layout_constraintStart_toEndOf="@+id/take_out_label"
        app:layout_constraintTop_toTopOf="@+id/dine_in_label" />

    <TextView
        android:id="@+id/delivery_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:fontFamily="@font/trebuchet"
        android:text="Delivery:"
        android:textColor="#404040"
        app:layout_constraintStart_toEndOf="@+id/take_out_option"
        app:layout_constraintTop_toTopOf="@+id/dine_in_label" />

    <TextView
        android:id="@+id/delivery_option"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/trebuchet"
        android:textColor="#404040"
        app:layout_constraintStart_toEndOf="@+id/delivery_label"
        app:layout_constraintTop_toTopOf="@+id/dine_in_label" />

    <ImageButton
        android:id="@+id/website_button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="#00f5f5f5"
        android:scaleType="fitCenter"
        android:src="@drawable/website"
        app:layout_constraintStart_toEndOf="@+id/phone_button"
        app:layout_constraintTop_toTopOf="@+id/phone_button" />

    <ImageButton
        android:id="@+id/phone_button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="20dp"
        android:background="#00f5f5f5"
        android:scaleType="fitCenter"
        android:src="@drawable/phone"
        app:layout_constraintStart_toEndOf="@+id/price_and_distance"
        app:layout_constraintTop_toBottomOf="@+id/dishname" />


</androidx.constraintlayout.widget.ConstraintLayout>