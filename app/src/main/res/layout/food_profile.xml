<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:visibility="visible">


    <TextView
        android:id="@+id/dishname"
        android:layout_width="350dp"
        android:layout_height="36dp"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/ropa_sans"
        android:text="Onion Rings"
        android:textColor="#404040"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dishimage" />

    <ImageView
        android:id="@+id/dishimage"
        android:layout_width="346dp"
        android:layout_height="420dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onion_rings" />

    <ImageView
        android:id="@+id/text_mask"
        android:layout_width="346dp"
        android:layout_height="420dp"
        app:layout_constraintStart_toStartOf="@+id/dishimage"
        app:layout_constraintTop_toTopOf="@+id/dishimage"
        app:srcCompat="@drawable/text_mask" />

    <ImageButton
        android:id="@+id/matchbutton"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="40dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/matches"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/match" />

    <TextView
        android:id="@+id/blurb"
        android:layout_width="346dp"
        android:layout_height="120dp"
        android:fontFamily="@font/trebuchet"
        android:gravity="bottom"
        android:padding="12dp"
        android:text="Perfect for any millennial, minus the self-deprecating humor. #relatable # trendy"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/dishimage"
        app:layout_constraintStart_toStartOf="@+id/dishimage" />

    <ImageButton
        android:id="@+id/homebutton"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="40dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/home_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home" />

    <ImageButton
        android:id="@+id/MoreInfo"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginBottom="53dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/matchbutton"
        app:layout_constraintStart_toEndOf="@+id/homebutton"
        app:srcCompat="@drawable/more_info" />

    <TextView
        android:id="@+id/price_and_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/trebuchet"
        android:text="$4.75 | 3.5 miles"
        android:textColor="#404040"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dishname" />

</androidx.constraintlayout.widget.ConstraintLayout>